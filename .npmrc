# Optimize npm for low memory servers
engine-strict=false
progress=false
loglevel=error
prefer-offline=true

# Reduce memory usage during npm install
maxsockets=5
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Production optimizations (don't force production mode for build)
optional=false
audit=false
fund=false
